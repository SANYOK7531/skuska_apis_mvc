@model List<skuska_01.Models.Transaction>

<h2>Bankové transakcie</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Dátum</th>
            <th>Popis</th>
            <th>Kategória</th>
            <th>Debit</th>
            <th>Kredit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.id</td>
                <td>@t.transactionDate.ToShortDateString()</td>
                <td>@t.description</td>
                <td>@t.category</td>
                <td>@(t.debit ?? 0) €</td>
                <td>@(t.credit ?? 0) €</td>
            </tr>
        }
    </tbody>
</table>

<h3>Pridať novú transakciu</h3>

<form asp-action="AddTransaction" method="post" class="mb-4">
    <div class="mb-2">
        <label>Popis</label>
        <input name="description" class="form-control" required />
    </div>

    <div class="mb-2">
        <label>Kategória</label>
        <input name="category" class="form-control" required />
    </div>

    <div class="mb-2">
        <label>Debit</label>
        <input name="debit" class="form-control" />
    </div>

    <div class="mb-2">
        <label>Credit</label>
        <input name="credit" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">
        Pridať
    </button>
</form>

<hr />


