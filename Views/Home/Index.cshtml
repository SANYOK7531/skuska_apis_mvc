@model List<skuska_01.Models.Transaction>

<h2>Bankové transakcie</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Dátum</th>
            <th>Popis</th>
            <th>Kategória</th>
            <th>Debit</th>
            <th>Kredit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.id</td>
                <td>@t.transactionDate.ToShortDateString()</td>
                <td>@t.description</td>
                <td>@t.category</td>
                <td>@(t.debit ?? 0) €</td>
                <td>@(t.credit ?? 0) €</td>
            </tr>
        }
    </tbody>
</table>
